<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/top_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:src="@drawable/top_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@+id/top_background"
            app:layout_constraintEnd_toEndOf="@+id/top_background"
            app:layout_constraintStart_toStartOf="@+id/top_background"
            app:layout_constraintTop_toBottomOf="@+id/top_background" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_10dp"
            android:text="@string/name"
            android:textSize="@dimen/name_textSize"
            android:textStyle="bold"
            android:textColor="@color/color_name"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lionfischer@gmail.com"
            android:textSize="@dimen/email_textSize"
            android:textColor="@color/color_name"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_55dp"
                android:layout_marginStart="@dimen/margin_startEnd_40dp"
                android:layout_marginEnd="@dimen/margin_startEnd_40dp"
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:text="My Reviews"
                android:gravity="center_vertical"
                android:background="@drawable/style_button1"
                android:drawableStart="@drawable/ic_1"
                android:paddingStart="@dimen/padding_20dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:textAllCaps="false"
                android:textSize="@dimen/txtSize_18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                 />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_55dp"
                android:layout_marginStart="@dimen/margin_startEnd_40dp"
                android:layout_marginEnd="@dimen/margin_startEnd_40dp"
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:text="Account Settings"
                android:gravity="center_vertical"
                android:background="@drawable/style_button1"
                android:drawableStart="@drawable/ic_2"
                android:paddingStart="@dimen/padding_20dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:textAllCaps="false"
                android:textSize="@dimen/txtSize_18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_55dp"
                android:layout_marginStart="@dimen/margin_startEnd_40dp"
                android:layout_marginEnd="@dimen/margin_startEnd_40dp"
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:text="Personal Information"
                android:gravity="center_vertical"
                android:background="@drawable/style_button1"
                android:drawableStart="@drawable/ic_3"
                android:paddingStart="@dimen/padding_20dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:textAllCaps="false"
                android:textSize="@dimen/txtSize_18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_55dp"
                android:layout_marginStart="@dimen/margin_startEnd_40dp"
                android:layout_marginEnd="@dimen/margin_startEnd_40dp"
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:text="Notification"
                android:gravity="center_vertical"
                android:background="@drawable/style_button1"
                android:drawableStart="@drawable/ic_4"
                android:paddingStart="@dimen/padding_20dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:textAllCaps="false"
                android:textSize="@dimen/txtSize_18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_55dp"
                android:layout_marginStart="@dimen/margin_startEnd_40dp"
                android:layout_marginEnd="@dimen/margin_startEnd_40dp"
                android:layout_marginTop="@dimen/margin_top_10dp"
                android:text="Fingerprint Settings"
                android:gravity="center_vertical"
                android:background="@drawable/style_button1"
                android:drawableStart="@drawable/ic_5"
                android:paddingStart="@dimen/padding_20dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:textAllCaps="false"
                android:textSize="@dimen/txtSize_18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_55dp"
                android:layout_marginStart="@dimen/margin_startEnd_40dp"
                android:layout_marginTop="@dimen/padding_20dp"
                android:layout_marginEnd="@dimen/margin_startEnd_40dp"
                android:layout_marginBottom="@dimen/margin_bottom_btn2_30dp"
                android:background="@drawable/style_button2"
                android:text="Back to Main page"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/txtSize_18sp"
                android:textStyle="bold" />

        </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>